<body>
  <header>University Fee Administration</header>

  <div class="container">
    <h2>Check Student Fee Details</h2>
    <input type="text" id="studentName" placeholder="Enter Any Student Name">
    <button onclick="showFees()">Submit</button>

    <div id="output" class="result" style="display: none;"></div>
  </div>

  <script>
    function showFees() {
      let name = document.getElementById("studentName").value.trim();

      if (name === "") {
        alert("Please enter a student name!");
        return;
      }

      // Generate random values
      let semesters = ["1st", "2nd", "3rd", "4th", "5th", "6th", "7th", "8th"];
      let sem = semesters[Math.floor(Math.random() * semesters.length)];

      let courseFee = Math.floor(Math.random() * 30000) + 35000; // 35k - 65k
      let hostelFee = Math.floor(Math.random() * 15000) + 15000; // 15k - 30k
      let pending = Math.floor(Math.random() * 10000); // 0 - 10k
      let total = courseFee + hostelFee;

      // ✅ Fixed: Random student picture with template string
      let randomPic = `https://randomuser.me/api/portraits/${Math.random() > 0.5 ? "men" : "women"}/${Math.floor(Math.random()*99)}.jpg`;

      // Show result
      document.getElementById("output").style.display = "flex";
      document.getElementById("output").innerHTML = `
        <img src="${randomPic}" alt="Student Photo">
        <div class="details">
          <p><b>Student Name:</b> ${name}</p>
          <p><b>Semester:</b> ${sem}</p>
          <p><b>Course Fee:</b> ₹${courseFee}</p>
          <p><b>Hostel Fee:</b> ₹${hostelFee}</p>
          <p><b>Pending Fee:</b> ₹${pending}</p>
          <p><b>Total Fee:</b> ₹${total}</p>
        </div>
      `;
    }
  </script>
